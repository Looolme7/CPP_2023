#include <iostream>
using namespace std;

int main() {
    setlocale(0, "RU");
    int number = 1;
    int sum = 0;
    while (number <= 1000) {
        if (number % 7 == 0) {
            sum += number;
        }
        number += 4;
    }
    cout << "Сумма чисел, делящихся на 7: " << sum << endl;
    return 0;
}
