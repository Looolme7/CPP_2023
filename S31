#include <iostream>
#include <string>
using namespace std;

int main() {
    setlocale(0, "Russian");
    string numbers[] = { "ноль", "один", "два", "три", "четыре", "пять", "шесть", "семь", "восемь", "девять" };

    int n;
    cout << "Введите число (от 0 до 9): ";
    cin >> n;

    if (n >= 0 && n <= 9) {
        cout << "Название числа: " << numbers[n] << "\n";
    }
    else {
        cout << "Введено некорректное число.\n";
    }

    return 0;
}
